---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import * as styles from './PostHeader.css';

interface Props {
  title: string;
  image: ImageMetadata;
  date?: Date;
}

const { title, image, date } = Astro.props;
---

<div class={styles.headerWrapper}>
  <Image src={image} alt="" class={styles.headerImage} />
  <div class={styles.titleOverlay}>
    <div class={styles.titleGroup}>
      {date && (
        <time class={styles.date} datetime={date.toISOString()}>
          {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC' })}
        </time>
      )}
      <h1 class={styles.title}>{title}</h1>
    </div>
  </div>
</div>

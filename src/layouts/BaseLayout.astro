---
import '98.css';

interface Props {
  title?: string;
  windowTitle?: string;
}

const { title = '~/blog', windowTitle = 'explorer.exe' } = Astro.props;

const owner = {
  name: 'Gabby Ortman',
  bio: "there's no place like ~/",
  job: 'Senior Software Engineer @ Pipe',
  github: 'nucle0tides',
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="desktop">
      <!-- About window -->
      <div class="window about-window">
        <div class="title-bar">
          <div class="title-bar-text">about.exe</div>
          <div class="title-bar-controls">
            <button aria-label="Minimize"></button>
            <button aria-label="Maximize"></button>
            <button aria-label="Close"></button>
          </div>
        </div>
        <div class="window-body">
          <p class="author-name">{owner.name}</p>
          <p class="author-bio">{owner.bio}</p>
          <p class="author-job">{owner.job}</p>
          <hr />
          <nav>
            <ul class="tree-view">
              <li><a href="/">home</a></li>
              <li><a href="/posts">posts</a></li>
              <li><a href={`https://github.com/${owner.github}`}>github</a></li>
            </ul>
          </nav>
        </div>
      </div>

      <!-- Main content window -->
      <div class="window content-window">
        <div class="title-bar">
          <div class="title-bar-text">{windowTitle}</div>
          <div class="title-bar-controls">
            <button aria-label="Minimize"></button>
            <button aria-label="Maximize"></button>
            <button aria-label="Close"></button>
          </div>
        </div>
        <div class="window-body">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>

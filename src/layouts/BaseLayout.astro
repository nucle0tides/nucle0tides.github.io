---
interface Props {
  title?: string;
}

const { title = '~/blog' } = Astro.props;

const owner = {
  name: 'Gabby Ortman',
  bio: "there's no place like ~/",
  job: 'Senior Software Engineer @ Pipe',
  github: 'nucle0tides',
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="container">
      <aside class="sidebar">
        <div class="sidebar-content">
          <a href="/" class="author-name">{owner.name}</a>
          <p class="author-bio">{owner.bio}</p>
          <p class="author-job">{owner.job}</p>
          <nav class="nav">
            <ul>
              <li><a href="/">home</a></li>
              <li><a href="/posts">posts</a></li>
            </ul>
          </nav>
          <div class="social-links">
            <a href={`https://github.com/${owner.github}`}>github</a>
          </div>
        </div>
      </aside>
      <main class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>
